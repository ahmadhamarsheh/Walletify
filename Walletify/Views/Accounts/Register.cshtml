@{
    ViewBag.Title = "Walletify-Register";
}
@section CustomCss {
    <link rel="stylesheet" href="~/css/StyleRegister.css" asp-append-version="true" />
}
    <section>
    <div class="container d-flex align-items-center justify-content-around gap-5">
        <div class="wrapper d-flex align-items-center justify-content-center flex-column">
            <div class="title text-center text-capitalize">register form</div>
            <form asp-action="Register" asp-controller="Accounts" class="">
                <div class="column d-flex  justify-content-around w-100">
                    <div class="field">
                        <input type="email" required />
                        <label>Email Address</label>
                    </div>
                    <div class="field">
                        <input type="text" required />
                        <label>Username</label>
                    </div>
                </div>
                <div class="column d-flex gap-2 w-100 justify-content-around">
                    <div class="field">
                        <input type="text" required />
                        <label>First Name</label>
                    </div>
                    <div class="field">
                        <input type="text" required />
                        <label>Last Name</label>
                    </div>
                </div>
                <div class="column  d-flex d-flex gap-2 w-100 justify-content-around">
                    <div class="field">
                        <input type="password" required />
                        <label>Password</label>
                    </div>
                    <div class="field">
                        <input type="password" required />
                        <label>Confirm Password</label>
                    </div>
                </div>
                <div class="column  d-flex d-flex gap-2 w-100 justify-content-around">
                    <div class="field">
                        <input type="number" required />
                        <label>Balance</label>
                    </div>
                    <div class="field">
                        <input type="number" required />
                        <label>Saved Per Month</label>
                    </div>
                </div>
                <div class="feild button">
                    <button asp-action="Signin" asp-controller="Accounts" class="text-center text-capitalize">register</button>
                </div>
                <div class="signin-link">Already have an account?<a asp-action="Signin" asp-controller="Accounts">Login</a></div>
            </form>
        </div>
        <div class="img">
            <img src="@Url.Content("~/Images/register.jpg")" class="w-100 h-100" />
        </div>
    </div>   
    </section>



